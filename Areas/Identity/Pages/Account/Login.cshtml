@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-3 d-flex align-items-center justify-content-center" style="background-color: #F2CD37; border: none;">
    <div class="row">
        <div class="col-md-6">
            <div class="d-flex align-items-center justify-content-center">
                <div class="col-md-10" style="background-color: #D21404; padding: 20px; margin-bottom: 0;">
                    <section style="margin-bottom: 0;">
                        <form id="account" method="post">
                            <h2 style="margin-bottom: 20px;">Log in, Master Builder!</h2>
                            <hr style="margin-top: 0; margin-bottom: 20px;" />
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3" style="margin-bottom: 20px;">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3" style="margin-bottom: 20px;">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox mb-3" style="margin-bottom: 20px;">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div style="margin-bottom: 20px;">
                                <button id="login-submit" type="submit" class="w-100 blue-button">Log in</button>
                            </div>
                            <div>
                                <p style="margin-bottom: 10px;">
                                    <a id="forgot-password" asp-page="./ForgotPassword" style="color: black;">Forgot your password?</a>
                                </p>
                                <p style="margin-bottom: 10px;">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: black;">Register as a new user</a>
                                </p>
                                <p style="margin-bottom: 0;">
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color: black;">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/img/buildinggif.gif" class="img-fluid" alt="Lego Gif">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
