@model Orders

<div style="display: flex; justify-content: center; align-items: center; padding-top: 50px; margin-top: auto;">
    <div class="container col-2"></div>
    <div class="container text-center col-4">
        <h2>Are you sure you want to mark this order as NOT fraudulent?</h2>
        <br />
        <div class="form-group">
                <a asp-action="ReviewOrders" class="btn blue-button">NO, keep for review</a>
                <form asp-controller="Home" asp-action="ReviewOrderDone" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@Model?.TransactionId ?? string.Empty" />
                    <input type="hidden" name="fraud" value="0" />
                    <button type="submit" class="btn blue-button">YES, mark as reviewed</button>
                </form>
        </div>
    </div>
    <div class="container col-2"></div>
</div>


 


