@model ProductListViewModel

@{
    ViewData["Title"] = "";
}

<script src="~/js/cookieConsent.js"></script>
﻿
<header class="bg py-3" style="background-color: #F2CD37; color: black; border: 1px solid black;">
    <div class="container px-4 px-lg-5 my-3">
        <div class="text-center text-white" style="font-family: 'Roboto', sans-serif;">
            <h1 class="display-4 fw-bolder" style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;">Welcome, Master Builder!</h1>
            <p class="lead fw-normal text-black-50 mb-0">Discover creativity in every brick with our unique LEGO designs!</p>
        </div>
    </div>
</header>

<div style="display: flex; justify-content: center; align-items: center; padding: 5px;">
    <div class="form-group">
        <br /><br />
        <div class="container" style="max-width: 80%">
            <h1 style="text-align: center">Recommended Products</h1>
            <br />
            <div class="row justify-content-center">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4 mb-4">
                        <!-- Each product will take up 4 columns on medium screens and above -->
                        <!-- Add margin bottom to create space between columns -->
                        <partial name="productsummary" model="product" />
                    </div>
                }
            </div>
        </div>

        <br />
    </div>

@*     <!-- Container for the Lego Man image -->
 *@    <div style="flex: 1; max-width: 40%; padding-right: 0px; box-sizing: border-box; text-align: right; display: flex; align-items: flex-end; justify-content: flex-center;">
        <img src="~/img/Lego - Recommend2.png" alt="Lego Man" style="width: 90%; height: auto;" />
