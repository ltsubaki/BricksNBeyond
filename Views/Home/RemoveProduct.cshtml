@{
}

@model Products



<div style="display: flex; justify-content: center; align-items: center; padding-top: 50px; margin-top: auto;">
    <!-- Container for the product and actions -->
    <div class="container col-2"></div>
    <div class="container text-center col-4">
        <img class="card-img-top" src="@Model.ImgLink" alt="Product Image" style="max-width: 80%; height: auto; object-fit: contain;" />
        <br />
        <h2>@Model.Name</h2>
        <br />
        <div class="form-group">
            <a asp-action="CRUDProducts" class="btn blue-button">NO, don't remove</a>
            <form asp-action="RemoveProductConfirmed" method="post" style="display: inline;">
                <input type="hidden" name="id" value="@Model.ProductId" />
                <button type="submit" class="btn red-button">YES, remove</button>
            </form>
        </div>
    </div>


    <!-- Container for the Lego Man image -->
    <div class="container text-center col-4">
        <img src="~/img/legoman - remove2.png" alt="Lego Man" style="width: 120%; height: auto;" />
    </div>
    <div class="container col-2"></div>
</div>

